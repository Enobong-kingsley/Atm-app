<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/deposit_name_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/name_of_depositor"
        android:inputType="number"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="18sp"
        android:background="@drawable/display_drawable"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"/>

    <EditText
        android:id="@+id/deposit_amount_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/display_drawable"
        android:gravity="center"
        android:hint="@string/enter_amount"
        android:inputType="number"
        android:padding="10dp"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deposit_name_dialog" />

    <TextView
        android:id="@+id/ok_button"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="@string/click_ok_complete_transaction_now"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/deposit_amount_dialog"
        app:layout_constraintStart_toStartOf="@+id/deposit_amount_dialog"
        app:layout_constraintTop_toBottomOf="@+id/deposit_amount_dialog" />



</androidx.constraintlayout.widget.ConstraintLayout>